{
	"name": "reader",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"assets": "npx @capacitor/assets generate",
		"android": "vite build && npx cap run android",
		"ios": "vite build && npx cap run ios",
		"predesktop": "vite build && cp -R ./docs/. ./electron/build",
		"desktop": "electron electron/index.js",
		"predesktop:package": "vite build && cp -R ./docs/. ./electron/build",
		"desktop:package": "electron-packager ./electron --appname=Reader --platform=darwin --arch=x64 --icon=electron/icon.icns --overwrite"
	},
	"dependencies": {
		"@capacitor-community/electron": "^5.0.1",
		"@capacitor/android": "^5.7.0",
		"@capacitor/app": "^5.0.7",
		"@capacitor/cli": "^5.6.0",
		"@capacitor/clipboard": "^5.0.6",
		"@capacitor/core": "^5.6.0",
		"@capacitor/ios": "^5.6.0",
		"@capacitor/preferences": "^5.0.6",
		"@capacitor/toast": "^5.0.6",
		"@ionic/pwa-elements": "^3.2.2",
		"@tanstack/react-query": "^5.17.19",
		"firebase": "^10.7.2",
		"menubar": "^9.4.0",
		"react": "^18.2.0",
		"react-beautiful-dnd": "^13.1.1",
		"react-dom": "^18.2.0",
		"send-intent": "^5.0.0"
	},
	"devDependencies": {
		"@capacitor/assets": "^3.0.4",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.17",
		"electron": "^28.2.0",
		"electron-packager": "^17.1.2",
		"eslint": "^8.55.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"postcss": "^8.4.33",
		"tailwindcss": "^3.4.1",
		"vite": "^5.0.8"
	}
}
